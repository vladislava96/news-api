{
    "root": true,
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "overrides": [
        {
            "files": [
                "**/*.js",
                "**/*.jsx"
            ],
            "plugins": [
                "prettier",
                "import"
            ],
            "extends": [
                "plugin:prettier/recommended",
                "prettier"
            ],
            "parserOptions": {
                "ecmaVersion": 2020,
                "sourceType": "module"
            }
        },
        {
            "files": [
                "**/*.ts",
                "**/*.tsx"
            ],
            "plugins": [
                "@typescript-eslint"
            ],
            "extends": [
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "@typescript-eslint/no-explicit-any": "warn"
            }
        }
    ]
}